<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <!--主頁面佈局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_open"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:background="@drawable/pj4" />

        <ImageButton
            android:id="@+id/btn_asus"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/pj1"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="68dp" />

        <ImageButton
            android:id="@+id/btn_acer"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/pj2"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="263dp" />

        <ImageButton
            android:id="@+id/btn_laptop"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/pj3"
            tools:layout_editor_absoluteX="70dp"
            tools:layout_editor_absoluteY="451dp" />

    </LinearLayout>

    <!--滑動選單佈局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="電話" />

        <Button
            android:id="@+id/btn_others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="配件" />

        <Button
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="首頁" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
