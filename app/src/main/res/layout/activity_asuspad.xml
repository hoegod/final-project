<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".asuspad"
    android:background="@color/white">

    <!--主頁面佈局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_open"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:background="@drawable/pj4" />

        <ImageButton
            android:id="@+id/btn_asus"
            android:layout_width="279dp"
            android:layout_height="158dp"
            app:srcCompat="@drawable/pj13"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="68dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ASUS Zenpad Z10"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/btn_laptop"
            android:layout_width="275dp"
            android:layout_height="257dp"
            app:srcCompat="@drawable/pj14"
            tools:layout_editor_absoluteX="70dp"
            tools:layout_editor_absoluteY="451dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ASUS ME103K"
            android:textColor="@color/black"/>

    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>
